{
  "version": 4,
  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}",
        "/usr/include/**"
      ],
      "defines": [],
      "compilerPath": "/usr/bin/clang++",
      "cppStandard": "c++23",
      "intelliSenseMode": "linux-clang-x64",
      "configurationProvider": "ms-vscode.cmake-tools",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "browse": {
        "path": [
          "${workspaceFolder}/**",
          "/usr/include/**"
        ],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": ""
      }
    }
  ]
}